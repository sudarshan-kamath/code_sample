{
  "targets": {
    "target1": {
      "description": "Primary RTLinux target - Standard test configuration",
      "builds": [
        {
          "name": "client",
          "source_directory": "./src/client",
          "output_directory": "./build",
          "command": "gcc -o ../../build/client.out client.c",
          "outputs": ["client.out"]
        },
        {
          "name": "server",
          "source_directory": "./src/server",
          "output_directory": "./build",
          "command": "gcc -o ../../build/server.out server.c",
          "outputs": ["server.out"]
        }
      ],
      "ftp": {
        "host": "192.168.1.100",
        "port": 21,
        "username": "root",
        "password": "rtlinux_pass",
        "target_directory": "/tmp",
        "timeout": 30
      },
      "telnet": {
        "host": "192.168.1.100",
        "port": 23,
        "username": "root",
        "password": "rtlinux_pass",
        "prompt_pattern": "#\\s*",
        "timeout": 30
      },
      "files_to_upload": [
        {
          "local": "build/client.out",
          "remote": "client.out"
        },
        {
          "local": "build/server.out",
          "remote": "server.out"
        },
        {
          "local": "run_test.sh",
          "remote": "run_test.sh"
        }
      ],
      "execution": {
        "script_name": "run_test.sh",
        "timeout": 120,
        "metrics_file": "metrics.txt"
      }
    },
    "target2": {
      "description": "Secondary RTLinux target - High performance build",
      "builds": [
        {
          "name": "client-optimized",
          "source_directory": "./src/client",
          "output_directory": "./build/optimized",
          "command": "gcc -O3 -march=native -o ../../build/optimized/client.out client.c",
          "outputs": ["client.out"]
        },
        {
          "name": "server-optimized",
          "source_directory": "./src/server",
          "output_directory": "./build/optimized",
          "command": "gcc -O3 -march=native -o ../../build/optimized/server.out server.c",
          "outputs": ["server.out"]
        }
      ],
      "ftp": {
        "host": "192.168.1.101",
        "port": 21,
        "username": "root",
        "password": "rtlinux_pass",
        "target_directory": "/tmp/perf_test",
        "timeout": 30
      },
      "telnet": {
        "host": "192.168.1.101",
        "port": 23,
        "username": "root",
        "password": "rtlinux_pass",
        "prompt_pattern": "#\\s*",
        "timeout": 30
      },
      "files_to_upload": [
        {
          "local": "build/optimized/client.out",
          "remote": "client.out"
        },
        {
          "local": "build/optimized/server.out",
          "remote": "server.out"
        },
        {
          "local": "run_test.sh",
          "remote": "run_test.sh"
        }
      ],
      "execution": {
        "script_name": "run_test.sh",
        "timeout": 180,
        "metrics_file": "metrics.txt"
      }
    },
    "target3": {
      "description": "Development target - Debug build with symbols",
      "builds": [
        {
          "name": "client-debug",
          "source_directory": "./src/client",
          "output_directory": "./build/debug",
          "command": "gcc -g -Wall -Wextra -o ../../build/debug/client.out client.c",
          "outputs": ["client.out"]
        },
        {
          "name": "server-debug",
          "source_directory": "./src/server",
          "output_directory": "./build/debug",
          "command": "gcc -g -Wall -Wextra -o ../../build/debug/server.out server.c",
          "outputs": ["server.out"]
        }
      ],
      "ftp": {
        "host": "192.168.1.102",
        "port": 21,
        "username": "root",
        "password": "dev_pass",
        "target_directory": "/home/dev/test",
        "timeout": 30
      },
      "telnet": {
        "host": "192.168.1.102",
        "port": 23,
        "username": "root",
        "password": "dev_pass",
        "prompt_pattern": "#\\s*",
        "timeout": 30
      },
      "files_to_upload": [
        {
          "local": "build/debug/client.out",
          "remote": "client.out"
        },
        {
          "local": "build/debug/server.out",
          "remote": "server.out"
        },
        {
          "local": "run_test.sh",
          "remote": "run_test.sh"
        }
      ],
      "execution": {
        "script_name": "run_test.sh",
        "timeout": 120,
        "metrics_file": "metrics.txt"
      }
    }
  },
  "default_target": "target1",
  "debug": false
}
